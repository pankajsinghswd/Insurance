@using Insurance.Resources
@model Insurance.Models.UserForgotPasswordViewModel
@{ ViewBag.Title = "Forgot your password?";
    Layout = "~/Views/Shared/_LayoutStatic_en.cshtml"; }

<div class="login_mn" style="height:342px!important">
    <div class="login_in">
        <div class="container" style="margin-left:28%;">
            <div class="row">
                <div class="col-lg-12">
                    <div class="col-sm-9 col-md-7 col-lg-6 mx-auto">
                        <div class="card card-signin">
                            <div class="card-body">
                                <h5 class="card-title text-center">@Master_en.UserLogin_ForgotPassword</h5>
                                @*<h3 class="card-title-small ">Lorem ipsum is a placeholder text </h3>*@
                                @using (Html.BeginForm("UserForgotPassword", "Account", FormMethod.Post, new { @class = "form-signin" }))
                                {
                    @Html.AntiForgeryToken()
                                    <div class="card_form">
                                        <div class="card_control">
                                            @Html.TextBoxFor(m => m.Email, new { @class = "card_control_input", @type = "text", @placeholder = Master_en.PHolderEmail })
                                            @Html.ValidationMessageFor(a => a.Email, string.Empty, new { @class = "text-danger" })
                                        </div>
                                    </div>
                                                    <button class="btn btn-lg btn-block login_btn" type="button" id="btnSubmit">@Master_en.EmailLink</button>}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>>
    </div>
    </div>
    @Scripts.Render("~/bundles/jqueryval")
    <script>
    setTimeout(function () {
            $('#divmsg').hide();
        }, 4000);
    $("#btnSubmit").click(function (e) {
            e.preventDefault();
            //$('#buttondiv').css('display','block!important;');
            // now trigger the form validation, result is 1 or 0
            var result = $('form').valid();
            if (result) {
                $('form').submit();
            }
    });
    </script>

