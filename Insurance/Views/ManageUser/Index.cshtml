@{ ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml"; }
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Users
            <small>List</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> User Management</a></li>
            <li><a href="#">Manage User</a></li>
            <li class="active">List</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <!-- /.box -->
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">
                            <a class="btn btn-success" href="/ManageUser/CreateAsync">Create New Users</a>
                        </h3>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        <table id="example1" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>Full Name</th>
                                    <th>Email</th>
                                    <th>Mobile</th>
                                    <th>Interest</th>
                                    <th>CreatedOn</th>
                                    <th>IsBlocked</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                    <tr>
                        <td>@item.FullName</td>
                        <td>@item.Email</td>
                        <td>@item.PhoneNumber</td>
                        <td>@item.Interest</td>
                        <td>@(Convert.ToDateTime(item.RegisteredOn).ToString("dd-MM-yyyy")) </td>
                        <td>@item.IsBlocked</td>
                        <td style="text-align:center">
                            <a onclick="View('@item.Id')" style="color: #00a65a;">View</a>
                            @if (Insurance.Utils.SessionHelper.IsAdmin())
                            {
                        <a href="/ManageUser/Edit/@item.Id" style="color: #cece52;">&nbsp;/Edit</a>
                        <a onclick="Delete('@item.Id')" style="color: #e67c1e;">&nbsp;/Delete</a> if (item.IsBlocked == "Unblocked")
                                {
                        <a onclick="Block('@item.Id','Block')">&nbsp;/ Block </a> }
                        else
                        {
                        <a onclick="Block('@item.Id','Unblock')">&nbsp;/ UnBlock </a>}
                        }
                        </td>
                    </tr>}
                            </tbody>

                        </table>
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
    <div class="modal fade ashwini" id="view">
        <div class="modal-dialog" style="width: 60%;">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" id="btnClose" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <h4 class="modal-title">Users Details</h4>
                </div>
                <div class="modal-body">
                    <table class="table table-striped table-bordered">
                        <tbody>
                            <tr>
                                <td colspan="2">
                                    <h4 class="modal-title">Users Profile</h4>
                                </td>
                            </tr>
                            <tr>
                                <td style="width: 15%;">
                                    <img style="height: 200px; width: 200px; border-radius: 50%;" id="img" src="#" alt="Alternate Text" />
                                </td>
                                <td style="width:75%">
                                    <table class="table table-striped ">
                                        <tbody>
                                            <tr>
                                                <td><b>Full Name</b></td>
                                                <td id="first"></td>
                                            </tr>
                                            <tr>
                                                <td><b>Mobile</b></td>
                                                <td id="Mobile"></td>
                                            </tr>
                                            <tr>
                                                <td><b>Email</b></td>
                                                <td id="Email"></td>
                                            </tr>
                                            <tr>
                                                <td><b>Insurance Type</b></td>
                                                <td id="insurancetype"></td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </td>
                            </tr>
                            <tr>
                                <td><b>Interest</b></td>
                                <td id="Interest"></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div class="modal-footer">
                    <button type="button" id="btnClosebutton" style="float:right" class="btn btn-danger pull-left" data-dismiss="modal">Close</button>
                </div>
            </div>
            <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
    </div>

</div>
<!-- /.content-wrapper -->

