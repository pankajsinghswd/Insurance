@{ ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml"; }
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Policy Type
            <small>List</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Policy Type</a></li>
            <li><a href="#">Manage Policy Type</a></li>
            <li class="active">List</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <!-- /.box -->
                <div class="box">
                    @*<div class="box-header">
                        <h3 class="box-title">
                            <a class="btn btn-success" href="/ManagePolicy/CreateAsync">Create New Policy Type</a>
                        </h3>
                    </div>*@
                    <!-- /.box-header -->
                    <div class="box-body">
                        <table id="example1" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Image</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    string photoPath = "";
                                    if (item.Image == "avtar.png")
                                    {
                                         photoPath = "/Content/images/" + (string.IsNullOrEmpty(item.Image) ? "avtar.png" : item.Image);
                                    }
                                    else
                                    {
                                         photoPath = "/Content/userProfile/" + (string.IsNullOrEmpty(item.Image) ? "avtar.png" : item.Image);
                                    }
                                <tr>
                                    <td>@item.Name</td>
                                    <td><img style="height:70px; width:70px;" id="img" src="@photoPath" alt="Alternate Text" /> </td>
                                    <td style="text-align:center">
                                        @if (Insurance.Utils.SessionHelper.IsAdmin())
                                        {
                                <a href="/ManagePolicy/Edit/@item.Id" style="color: #cece52;">&nbsp;Edit</a> @*<a href="/ManagePolicy/Delete/@item.Id" style="color: #cece52;">&nbsp;/Delete</a>*@}
                                    </td>
                                </tr>
}
                            </tbody>

                        </table>
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->

</div>
<!-- /.content-wrapper -->

@section Scripts
{
    <script type="text/javascript">
        $(document).ready(function () {
            $('#example1').DataTable()
        })</script>

}